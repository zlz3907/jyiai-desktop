{
  "name": "jyiai-desktop",
  "productName": "简易AI",
  "version": "1.0.0",
  "description": "基于大语言模型的智能AI助手（AIMetaa）",
  "main": "src/main/app.js",
  "author": {
    "name": "中和圆创",
    "email": "service@zhycit.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production electron-builder",
    "dev": "cross-env NODE_ENV=development electron .",
    "publish": "electron-builder -p always",
    "release": "electron-builder --mac --win --linux -p always"
  },
  "build": {
    "appId": "com.zhycit.jyiai",
    "productName": "AIMetar",
    "publish": {
      "provider": "github",
      "owner": "zhycit",
      "repo": "jyiai-desktop"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "synopsis": "AI Assistant Desktop Client"
    },
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "package.json",
      "LICENSE",
      "README.md"
    ],
    "protocols": {
      "name": "AIMetar Protocol",
      "schemes": [
        "aimetar"
      ]
    }
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  }
}
